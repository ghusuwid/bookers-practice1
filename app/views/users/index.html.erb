<div class="container px-5 px-sm-0">
  
  <div class ="row">
  
    <div class ="col-lg-3">
     <%= render 'users/user_info', user: current_user %>
     <%= render 'books/new', book: @book %>
    </div>

   <div class ="col-lg-8">
     <h1>Users</h1>
     <table class="table table-hover table-inverse">
         
     <thead>
          <tr>
          <div>
            <th>image</th>
            <th>name</th>
            <th></th>
            
          </div>
          </tr>
       </thead>
    
     <% @users.each do |user| %>
      
     
       <tbody>
            <tr>
              <td><%= image_tag user.get_profile_image %></td>
              <td><%= user.name %></td>
              <td><p><%= link_to "show", user_path(user.id) %></p></td>
            </tr>
       </tbody>
  
     <% end %>
     </table> 
    </div>
  </div>
  
</div>
