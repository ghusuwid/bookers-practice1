

<%= render 'users/error', post_image: @user %>

<div class="container">
  
  <div class ="row">
    
    
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  
   <h1>User info</h1>
    

   <%= form_with model: @user do |f| %>
   <div class="form-group">
     <label for="inputName">Name</label>
     <%= f.text_field :name, autofocus: true, id:"inputName" %>
   </div>
   <div class="form-group">
     <label for="inputImage">ProfileImage</label>
     <%= f.file_field :profile_image, accept: "image/*" %>
   </div>
   <div class="form-group">
     <label for="inputName">Introduction</label>
     <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %>
   </div>
     <%= f.submit "Update user" %>
   <% end %>
   
  </div>
  
</div>