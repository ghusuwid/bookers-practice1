<div class="container px-5 px-sm-0">
  
  <div class ="row">
  
    <div class ="col-lg-3">
     <%= render 'users/user_info', user: current_user %>
     <%= render 'books/new', book: @book %>
    </div>

  
  <div class ="col-lg-8">
  <h1>Books</h1>

    <%= render 'users/error', post_image: @book %>
    
    <table class="table table-hover table-inverse">
    
    <thead>
          <tr>
          <div>
            <th></th>
            <th>title</th>
            <th>opinion</th>
            <th>comment</th>
            
          </div>
          </tr>
      </thead>
    <% @books.each do |book| %>
    
     
      <tbody>
        <tr>
      <td>
      <%= link_to user_path(book.user.id) do %>
        <%= image_tag book.user.get_profile_image %>
      <% end %>
      </td>
      <td>
        <%= link_to book_path(book) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
      <td><%= link_to "#{book.post_comments.count} コメント", book_path(book.id) %></td>
      </tr>
      </tbody>
    <% end %>
    </table>
  </div>
  
  </div>
  
</div>